mark
  background-color #f9e0e0
  background linear-gradient(transparent 60%,#f9e0e0 0)

.num
  display inline-block
  background #e50078
  color #fff
  line-height 1.6em
  width 1.6em
  text-align center
  font-family Tahoma

.example
  padding 16px

.demos
  position relative
  border 2px solid #ddd
  background #fff;
  margin 40px 0 40px 0
  padding 40px 24px 16px

  input[type="text"],
  input:not([type])
    border 1px solid #ccc
    border-radius 2px
    padding 4px 8px

  button
    background #eb516b
    border none
    border-radius 2px
    padding 4px 16px
    color #fff
    transition background-color .25s
    cursor pointer
    &:hover
      background #da1944
    +button {
      margin-left 4px;
    }
    &[disabled]
      background #ccc
      &:hover
        background #ccc
  
  &-content
    margin-top 0
    margin-bottom 24px
    :first-child 
      margin-top 0

  &-header
    position absolute
    top -2px
    left -2px
    display inline-block
    padding 4px 8px 4px
    background #bbb
    color #fff
    font-size 80%

  &-footer
    display inline-block
    position absolute
    bottom 4px
    right 4px
    font-size 70%
    color #bbb

.fa-icon
  vertical-align middle

